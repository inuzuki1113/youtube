{
  "name": "DevKitPro 3DS Build Environment",
  "image": "ubuntu:22.04",
  "postCreateCommand": [
    "wget https://apt.devkitpro.org/devkitpro-pacman.deb",
    "sudo dpkg -i devkitpro-pacman.deb",
    "sudo apt-get update",
    "sudo apt-get install -y build-essential",
    "sudo dkp-pacman -Syu",
    "sudo dkp-pacman -S ctrulib3ds"
  ],
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  }
}
